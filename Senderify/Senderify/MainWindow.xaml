<Window x:Name="Sendirify" x:Class="Senderify.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Senderify"
        mc:Ignorable="d"
        Title="Sendirify" Height="550" Width="800" Icon="/arbolico_png.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="74*"/>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="32*"/>
        </Grid.ColumnDefinitions>
        <Rectangle x:Name="fondo" Stroke="Black" Grid.ColumnSpan="5" Grid.RowSpan="5" Grid.Column="0" Grid.Row="0">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/foto_trans.png"/>
            </Rectangle.Fill>

        </Rectangle>


        <Image x:Name="esi" Grid.Column="0" Grid.Row="0" Source="/esi_logo.png" Margin="21,26,24,38"/>
        <Rectangle x:Name="login_cuadro" Grid.Column="1" Grid.Row="1" Stroke="Black" Grid.RowSpan="4" Fill="#FF26221F" StrokeEndLineCap="Round" StrokeStartLineCap="Round" StrokeLineJoin="Round" StrokeDashCap="Round" RadiusX="10" RadiusY="10" Margin="0,0,0,82" Grid.ColumnSpan="3"/>
        <Label x:Name="txt_inicio" Grid.Column="2" Content="¡Bienvenido a Sendirify!" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Top" Foreground="White" Height="49" Width="348" FontSize="30" FontFamily="Comic Sans MS" Margin="0,23,0,0"/>
        <TextBox x:Name="user_box"  Grid.Column="2" HorizontalAlignment="Center" Margin="0,115,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="268" Height="29" Grid.RowSpan="2" IsUndoEnabled="False" AutomationProperties.HelpText="Introduzca el usuario..." Text="Introduzca el usuario..." FontFamily="Comic Sans MS" FontStyle="Italic" Foreground="Gray" MouseEnter="user_box_MouseEnter" FontSize="16" MouseLeave="user_box_MouseLeave" KeyDown="user_box_KeyDown">
            <TextBox.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"></Setter>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <TextBox x:Name="pass_box" Grid.Column="2" HorizontalAlignment="Center" Grid.Row="2" TextWrapping="Wrap" Text="Introduzca la contraseña..." Width="268" Margin="0,41,0,0" Height="29" VerticalAlignment="Top" FontSize="16" FontFamily="Comic Sans MS" FontStyle="Italic" Foreground="Gray" MouseEnter="pass_box_MouseEnter" MouseLeave="pass_box_MouseLeave" KeyDown="pass_box_KeyDown" IsEnabled="False">
            <TextBox.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"></Setter>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <Button x:Name="btn_login" Content="Entrar" Grid.Column="2" Margin="25,23,25,24" Grid.Row="3" Background="#FF2F6539" Foreground="White" FontFamily="Comic Sans MS" FontSize="20" Click="btn_login_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"></Setter>
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
</Window>
    
